---
import { VideoPlayer } from "@client/components/VideoPlayer.tsx";
import { formatDate } from "@client/lib/consts";
import { modifySrc } from "@client/lib/services/media";
import { getContentList } from "@client/lib/services/microcms";
import { Image } from "astro:assets";
import { css } from "panda/css";
import { styled as p } from "panda/jsx";

const worksList = await getContentList("works");
---

<p.div
  className="works-list"
  display="grid"
  gap="10"
  gridTemplateColumns="repeat(auto-fill, minmax(300px, 1fr))"
  textAlign="center"
  w="100%"
>
  {
    worksList.contents.map(
      ({ id, title, ogpImg, releaseDate, previewVideo }) => (
        <p.a
          key={id}
          bg="9u-gray"
          className={css({
            "& > *": {
              pointerEvents: "none",
              overflow: "hidden",
            },
            "& video": {
              pointerEvents: "auto",
            },
          })}
          href={`/works/${id}`}
          overflow="hidden"
          position="relative"
          w="100%"
        >
          <Image
            alt={title}
            height={ogpImg?.height ?? 180}
            src={ogpImg?.url ?? "/assets/external/works/test/color_bar.png"}
            width={ogpImg?.width ?? 320}
          />
          <p.div
            h="100%"
            left="50%"
            opacity={{
              base: "0",
              _hover: "1",
            }}
            position="absolute"
            style={{
              pointerEvents: previewVideo != null ? "none" : "auto",
            }}
            top="50%"
            transform="translate(-50%, -50%)"
            transition="opacity 0.3s"
            w="100%"
          >
            <p.div h="100%" overflow="hidden" position="relative">
              {previewVideo != null && (
                <VideoPlayer
                  client:visible
                  loop
                  muted
                  playOnHover
                  src={modifySrc(previewVideo)}
                  style={{
                    minWidth: "100%",
                    minHeight: "100%",
                  }}
                />
              )}
              <p.div
                bg="9u-red1"
                h="100%"
                left="50%"
                opacity="0.5"
                position="absolute"
                top="50%"
                transform="translate(-50%, -50%)"
                w="100%"
              />
              <p.div
                color="9u-white"
                left="50%"
                position="absolute"
                top="50%"
                transform="translate(-50%, -50%)"
                w="100%"
              >
                <p.p fontSize="xl" fontWeight="bold">
                  {title}
                </p.p>
                <p.p>{formatDate(new Date(releaseDate), "YYYY.MM")}</p.p>
              </p.div>
            </p.div>
          </p.div>
        </p.a>
      ),
    )
  }
</p.div>
