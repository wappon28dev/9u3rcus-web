---
import { styled as p } from "panda/jsx";
import { Image } from "astro:assets";
import { css } from "panda/css";
import { formatDate } from "@/lib/consts";
import { getContentList } from "@/lib/services/microcms";
import { VideoPlayer } from "@/components/VideoPlayer.tsx";
import { modifySrc } from "@/lib/services/media";
import { WorksListOmitted } from "./WorksListOmitted";

type Props = {
  needOmit?: boolean;
  omitRowLength?: number;
};

const { needOmit = false, omitRowLength } = Astro.props;
const worksList = await getContentList("works", { fields: ["id", "title"] });
---

{
  needOmit ? (
    <WorksListOmitted worksList={worksList} omitRowLength={omitRowLength} client:idle />
  ) : (
  <p.div
    className="works-list"
    display="grid"
    gap="10"
    gridTemplateColumns="repeat(auto-fill, minmax(300px, 1fr))"
    textAlign="center"
    w="100%"
  >
    {
      worksList.contents.map(({ id, title, ogpImg, releaseDate, videoOnHover }) => (
        <p.a
          key={id}
          bg="9u-gray"
          className={css({
            "& > *": {
              pointerEvents: "none",
              overflow: "hidden",
            },
            "& video": {
              pointerEvents: "auto",
            },
          })}
          href={`/works/${id}`}
          overflow="hidden"
          position="relative"
          w="100%"
        >
          <Image
            alt={title}
            height={ogpImg.height}
            src={ogpImg.url}
            width={ogpImg.width}
          />
          <p.div
            h="100%"
            left="50%"
            opacity={{
              base: "0",
              _hover: "1",
            }}
            position="absolute"
            style={{
              pointerEvents: videoOnHover != null ? "none" : "auto",
            }}
            top="50%"
            transform="translate(-50%, -50%)"
            transition="opacity 0.3s"
            w="100%"
          >
            <p.div h="100%" overflow="hidden" position="relative">
              {videoOnHover != null && (
                <VideoPlayer
                  client:visible
                  muted
                  playOnHover
                  src={modifySrc(videoOnHover)}
                  style={{
                    minWidth: "100%",
                    minHeight: "100%",
                  }}
                />
              )}
              <p.div
                bg="9u-red1"
                h="100%"
                left="50%"
                opacity="0.5"
                position="absolute"
                top="50%"
                transform="translate(-50%, -50%)"
                w="100%"
              />
              <p.div
                color="9u-white"
                left="50%"
                position="absolute"
                top="50%"
                transform="translate(-50%, -50%)"
                w="100%"
              >
                <p.p fontSize="xl" fontWeight="bold">
                  {title}
                </p.p>
                <p.p>{formatDate(new Date(releaseDate), "YYYY.MM")}</p.p>
              </p.div>
            </p.div>
          </p.div>
        </p.a>
      ))
    }
  </p.div>
  )
}
