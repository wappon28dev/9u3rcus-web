---
import Marker from "@client/components/Marker.astro";
import BlogsList from "@client/components/list/BlogsList.astro";
import { WorksListOmitted } from "@client/components/list/WorksListOmitted";
import BaseLayout from "@client/layouts/BaseLayout.astro";
import { INFO } from "@client/lib/config";
import { getContentList } from "@client/lib/services/microcms";
import { css } from "panda/css";
import { VStack, styled as p } from "panda/jsx";
import logoBg from "~/assets/img/logo_bg.svg";

const worksList = await getContentList("works", { fields: ["id", "title"] });
---

<BaseLayout
  header={{
    hideBeforeHero: true,
  }}
  style={{
    bgColor: "colors.9u-white",
  }}
>
  <p.div
    bgPosition="right"
    bgRepeat="no-repeat"
    bgSize="cover"
    display="grid"
    h={{
      base: "100vh",
      mdDown: "350px",
      seDown: "200px",
    }}
    my="0"
    placeContent="center start"
    style={{
      backgroundImage: `url(${logoBg.src})`,
    }}
    w="100%"
  >
    <p.div
      color="9u-white"
      id="hero"
      pl={{ base: "20", mdDown: "10" }}
      textAlign="left"
    >
      <p.p
        fontSize={{ base: "6xl", mdDown: "5xl", seDown: "3xl" }}
        fontWeight="bold"
        ml="-4px">{INFO.name.full}</p.p
      >
      <p.p fontSize={{ base: "lg", seDown: "md" }}>Motion Graphics Designer</p.p
      >
    </p.div>
  </p.div>
  <p.div
    className={css({
      "& > div": {
        py: { base: "20", mdDown: "10" },
      },
    })}
  >
    <VStack className="content" gap="10">
      <Marker>
        <p.h2>Works</p.h2>
      </Marker>
      <WorksListOmitted client:load worksList={worksList} />
    </VStack>
    <p.div bgColor="9u-brown" color="9u-white" w="100%">
      <VStack className="content" gap="10">
        <Marker>
          <p.h2 color="9u-white">Blog</p.h2>
        </Marker>
        <BlogsList needOmit />
      </VStack>
    </p.div>
  </p.div>
</BaseLayout>
