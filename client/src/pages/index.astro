---
import BaseLayout from "@layouts/BaseLayout.astro";
import { styled as p } from "panda/jsx";
import logoBg from "@public/assets/img/logo_bg.svg";
import { css } from "panda/css";
import { INFO } from "@/lib/config";
import Marker from "@/components/Marker.astro";
---

<BaseLayout
  header={{
    hideBeforeHero: true,
  }}
  style={{
    bgColor: "colors.9u-white",
  }}
>
  <p.div
    bgPosition="right"
    bgRepeat="no-repeat"
    bgSize="cover"
    display="grid"
    h={{
      base: "100vh",
      mdDown: "350px",
      seDown: "200px",
    }}
    my="0"
    placeContent="center start"
    style={{
      backgroundImage: `url(${logoBg.src})`,
    }}
    w="100%"
  >
    <p.div
      color="9u-white"
      id="hero"
      pl={{ base: "20", mdDown: "10" }}
      textAlign="left"
    >
      <p.p
        fontSize={{ base: "6xl", mdDown: "5xl", seDown: "3xl" }}
        fontWeight="bold"
        ml="-4px">{INFO.name.full}</p.p
      >
      <p.p fontSize={{ base: "lg", seDown: "md" }}>Motion Graphics Designer</p.p
      >
    </p.div>
  </p.div>
  <p.div
    className={css({
      "& > div": {
        py: { base: "20", mdDown: "10" },
      },
    })}
  >
    <p.div className="content" display="flex" flexDir="column" gap="10">
      <Marker>
        <p.h2>Works</p.h2>
      </Marker>
      <p.div
        display="grid"
        gap="10"
        gridTemplateColumns="repeat(auto-fill, minmax(300px, 1fr))"
        textAlign="center"
      >
        {
          Array.from({ length: 6 }).map((_, i) => (
            // eslint-disable-next-line react/no-array-index-key
            <p.div key={i} bg="9u-gray" h="250px" />
          ))
        }
      </p.div>
    </p.div>
    <p.div
      bgColor="9u-brown"
      className="content"
      display="flex"
      flexDir="column"
      gap="10"
    >
      <Marker>
        <p.h2 color="9u-white">Blog</p.h2>
      </Marker>
      <p.div
        display="grid"
        gap="10"
        gridTemplateColumns="repeat(auto-fill, minmax(300px, 1fr))"
        textAlign="center"
      >
        {
          Array.from({ length: 6 }).map((_, i) => (
            // eslint-disable-next-line react/no-array-index-key
            <p.div key={i} bg="9u-gray" h="250px" />
          ))
        }
      </p.div>
    </p.div>
  </p.div>
</BaseLayout>
