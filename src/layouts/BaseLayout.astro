---
import { ViewTransitions } from "astro:transitions";
import { styled as p } from "panda/jsx";
import { SEO } from "astro-seo";
import { token } from "panda/tokens";
import { type PageManifest as Props } from "@/types/page";
import { INFO } from "@/lib/config";

const { seo, style } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link href="/favicon.svg" rel="icon" type="image/svg+xml" />
    <meta content="width=device-width" name="viewport" />
    <meta content="{Astro.generator}" name="generator" />
    <link href="/sitemap-index.xml" />
    <link href="/styles/global.css" rel="stylesheet" />
    <SEO
      description={seo?.description ?? ""}
      title={seo?.title ?? ""}
      titleTemplate={`%s | ${INFO.name.short}`}
      twitter={{
        creator: INFO.name.twitter,
        card: "summary_large_image",
      }}
    />
    <title>{INFO.name.short}</title>
  </head>

  <p.body
    h="100%"
    style={{
      backgroundColor: token(style?.background ?? "colors.9u-white"),
    }}
    w="100%"
  >
    <ViewTransitions />
    <p.header />
    <p.main h="100%" m="0 auto" w="100%">
      <slot />
    </p.main>
    <p.footer />
  </p.body>


</html>
