---
import { ViewTransitions } from "astro:transitions";
import { styled as p } from "panda/jsx";
import { SEO } from "astro-seo";
import { token } from "panda/tokens";
import { type PageManifest as Props } from "@/types/page";
import { INFO } from "@/lib/config";

const { seo, style } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link href="/favicon.svg" rel="icon" type="image/svg+xml" />
    <meta content="width=device-width" name="viewport" />
    <meta content="{Astro.generator}" name="generator" />
    <link href="/sitemap-index.xml" />
    <link href="/styles/global.css" rel="stylesheet" />
    <SEO
      description={seo?.description ?? ""}
      title={seo?.title ?? ""}
      titleTemplate={`%s | ${INFO.name.short}`}
      twitter={{
        creator: INFO.name.twitter,
        card: "summary_large_image",
      }}
    />
    <title>{INFO.name.short}</title>
  </head>

  <p.body>
    <ViewTransitions />
    <p.div
      display="grid"
      gridTemplateColumns="100%"
      gridTemplateRows="auto 1fr auto"
      minH="100vh"
      style={{
        background: token.var(style?.background ?? "colors.9u-white"),
      }}
      w="100%"
    >
      <p.header />
      <p.main m="0 auto" maxW="1200px" p="20px" w="100%">
        <slot />
      </p.main>
      <p.footer />
    </p.div>
  </p.body>


</html>
