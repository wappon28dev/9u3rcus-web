---
import BaseLayout from "@layouts/BaseLayout.astro";
import { styled as p } from "panda/jsx";
import { token } from "panda/tokens";
import logoBg from "@public/assets/img/logo_bg.svg";
import { INFO } from "@/lib/config";
---

<BaseLayout
  style={{
    background: "colors.9u-white",
  }}
>
  <p.div
    backgroundPosition="right"
    backgroundRepeat="no-repeat"
    backgroundSize="cover"
    display="grid"
    h="100vh"
    my="0"
    placeContent="center start"
    style={{
      backgroundImage: `url(${logoBg.src})`,
    }}
    w="100%"
  >
    <p.div color="9u-white" pl="20" textAlign="left">
      <p.p fontSize="5xl" fontWeight="bold">{INFO.name.full}</p.p>
      <p.p pl="4px">Motion Graphics Designer</p.p>
    </p.div>
  </p.div>
  <p.article display="flex" flexDir="column" gap="8" p="28">
    <p.div
      fontSize="5xl"
      fontWeight="bold"
      lineHeight="1.1"
      m="0 auto"
      w="fit-content"
    >
      <p.h2
        px="3"
        style={{
          background: `linear-gradient(transparent 50%, ${token("colors.9u-red1")} 50%)`,
        }}
        textAlign="center"
      >
        Works
      </p.h2>
    </p.div>

    <p.div
      display="grid"
      gap="8"
      gridTemplateColumns="repeat(auto-fill, minmax(400px, 1fr))"
      textAlign="center"
    >
      {
        Array.from({ length: 6 }).map((_, i) => (
          // eslint-disable-next-line react/no-array-index-key
          <p.div key={i} bg="9u-gray" h="250px" />
        ))
      }
    </p.div>
  </p.article>
</BaseLayout>
