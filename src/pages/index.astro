---
import BaseLayout from "@layouts/BaseLayout.astro";
import { styled as p } from "panda/jsx";
import logoBg from "@public/assets/img/logo_bg.svg";
import { INFO } from "@/lib/config";
import Marker from "@/components/Marker.astro";
---

<BaseLayout
  header={{
    isFixed: true,
  }}
  style={{
    bgColor: "colors.9u-white",
  }}
>
  <p.div
    bgPosition="right"
    bgRepeat="no-repeat"
    bgSize="cover"
    display="grid"
    h="100vh"
    my="0"
    placeContent="center start"
    style={{
      backgroundImage: `url(${logoBg.src})`,
    }}
    w="100%"
  >
    <p.div color="9u-white" id="hero" pl="20" textAlign="left">
      <p.p fontSize="6xl" fontWeight="bold">{INFO.name.full}</p.p>
      <p.p fontSize="lg" pl="4px">Motion Graphics Designer</p.p>
    </p.div>
  </p.div>
  <p.div display="flex" flexDir="column" gap="8">
    <p.section display="flex" flexDir="column" gap="8" py="20">
      <Marker>
        <p.h2>Works</p.h2>
      </Marker>

      <p.article>
        <p.div
          display="grid"
          gap="8"
          gridTemplateColumns="repeat(auto-fill, minmax(300px, 1fr))"
          textAlign="center"
        >
          {
            Array.from({ length: 6 }).map((_, i) => (
              // eslint-disable-next-line react/no-array-index-key
              <p.div key={i} bg="9u-gray" h="250px" />
            ))
          }
        </p.div>
      </p.article>
    </p.section>
    <p.section bg="9u-brown" display="flex" flexDir="column" gap="8" py="20">
      <Marker>
        <p.h2 color="9u-white">Blog</p.h2>
      </Marker>
      <p.article>
        <p.div
          display="grid"
          gap="8"
          gridTemplateColumns="repeat(auto-fill, minmax(300px, 1fr))"
          textAlign="center"
        >
          {
            Array.from({ length: 6 }).map((_, i) => (
              // eslint-disable-next-line react/no-array-index-key
              <p.div key={i} bg="9u-gray" h="250px" />
            ))
          }
        </p.div>
      </p.article>
    </p.section>
  </p.div>
</BaseLayout>
